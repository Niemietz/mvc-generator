<div class="modal fade" id="add-page-modal" tabindex="-1" role="dialog" aria-labelledby="add-page-title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="add-page-title">Adicionar Página</h5>
                <button type="button" class="close" data-mdb-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-page-form">
                    <input name="name" class="form-control" type="text" placeholder="Nome">
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="page-type" value="1" id="default" checked />
                        <label class="form-check-label" for="default">Padrão</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="page-type" value="2" id="simple-list" />
