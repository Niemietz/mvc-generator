<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
	</head>
	<body class="kind-steel-gradient color-block p-3 mx-auto">
		<!----------------- STYLESHEETS ----------------->

		<!-- Font Awesome 5.15.1 -->
		<!-- <link rel="stylesheet" href="stylesheets/all.min.css"> -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
		
		<!-- Material Design Bootstrap 5 / MDB UI Kit 3.1.0 -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.1.0/mdb.min.css">
		
		<!-- Notiflix -->
		<link rel="stylesheet" href="stylesheets/notiflix-2.7.0.min.css">

		<!-- Custom -->
		<link rel="stylesheet" href="stylesheets/language-chooser.css">
		<link rel="stylesheet" href="stylesheets/custom.css">

		<!----------------- SCRIPTS ----------------->

		<!-- JQuery -->
		<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		
		<!-- MDB core JavaScript -->
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.1.0/mdb.min.js"></script>

		<!-- Notiflix -->
		<script type="text/javascript" src="javascripts/notiflix-aio-2.7.0.min.js"></script>

		<!-- Custom -->
		<script type="text/javascript" src="javascripts/common.js"></script>
		
		<!-- Modules -->
		<script type="module" src="javascripts/views/language-chooser.js"></script>
		<script type="module" src="javascripts/views/index.js"></script>
		
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
					<h5 style="text-transform: uppercase;">MVC Generator</h5>
				</div>
			</div>
			<div class="row pb-3" style="
					border: 1px solid #cdccc9;
					border-radius: 5px;
				">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<h5 class="mt-3" style="text-transform: uppercase;">Linguagens</h5>
					<div class="languages">
						<div id="php" class="language mdb-tooltip" value="1" data-mdb-toggle="tooltip" data-mdb-placement="top" title="PHP" checked>
							<i class="fab fa-php"></i>
							<span>PHP (Website)</span>
						</div>
						<div id="java" class="language mdb-tooltip" value="2" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Java">
							<i class="fab fa-java"></i>
							<span>Java</span>
						</div>
						<div id="android" class="language mdb-tooltip" value="3" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Android">
							<i class="fab fa-android"></i>
							<span>Android (Kotlin)</span>
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-3">
					<label class="form-label">Meus arquivos</label>
				</div>
				<div id="php-files-container" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
					<div class="row">
						<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
							<select id="php-files" name="php-files" language="1" class="form-control form-select my-files active">
								<option value="" selected>-</option>
							</select>
						</div>
						<div class="col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="php-files-delete" href="javascript:void(0)" language="1" class="my-files-delete text-danger"><i class="fas fa-trash-alt fa-2x"></i></a>
						</div>
						<div class="ms-3 col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="php-files-download" href="javascript:void(0)" language="1" class="my-files-download"><i class="fas fa-download fa-2x"></i></a>
						</div>
					</div>
				</div>
				<div id="java-files-container" class="col-xs-12 col-sm-4 col-md-4 col-lg-4 d-none">
					<div class="row">
						<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
							<select id="java-files" name="java-files" language="2" class="form-control form-select my-files active">
								<option value="" selected>-</option>
							</select>
						</div>
						<div class="col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="java-files-delete" href="javascript:void(0)" language="2" class="my-files-delete text-danger"><i class="fas fa-trash-alt fa-2x"></i></a>
						</div>
						<div class="ms-3 col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="java-files-download" href="javascript:void(0)" language="2" class="my-files-download"><i class="fas fa-download fa-2x"></i></a>
						</div>
					</div>
				</div>
				<div id="kotlin-files-container" class="col-xs-12 col-sm-4 col-md-4 col-lg-4 d-none">
					<div class="row">
						<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
							<select id="kotlin-files" name="kotlin-files" language="3" class="form-control form-select my-files active">
								<option value="" selected>-</option>
							</select>
						</div>
						<div class="col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="kotlin-files-delete" href="javascript:void(0)" language="3" class="my-files-delete text-danger"><i class="fas fa-trash-alt fa-2x"></i></a>
						</div>
						<div class="ms-3 col-xs-12 col-sm-1 col-md-1 col-lg-1">
							<a id="kotlin-files-delete" href="javascript:void(0)" language="3" class="my-files-download"><i class="fas fa-download fa-2x"></i></a>
						</div>
					</div>
				</div>
			</div>
			<form id="website-form">
				<div class="row mt-3 pb-3" style="
						border: 1px solid #cdccc9;
						border-radius: 5px;
					">
					<h5 class="mt-3" style="text-transform: uppercase;">Geral</h5>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="website-title" id="website-title" type="text" class="form-control" required />
							<label id="website-title-label" class="form-label" for="website-title">Nome do site</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="website-author" id="website-author" type="text" class="form-control" />
							<label class="form-label" for="website-author">Autor</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="website-email" id="website-email" type="text" class="form-control" />
							<label class="form-label" for="website-email">E-mail</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<div class="form-outline mt-3">
							<textarea name="website-description" class="form-control" id="website-description" rows="2"></textarea>
							<label class="form-label" for="website-description">Descrição</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="website-keywords-container">
						<div class="form-outline mt-3">
							<textarea name="website-keywords" class="form-control" id="website-keywords" rows="2"></textarea>
							<label class="form-label" for="website-keywords">Palavras-chave do site (Separado por vírgula)</label>
						</div>
					</div>
				</div>
				<div id="website-general-components-container" class="row mt-3 pb-3" style="
						border: 1px solid #cdccc9;
						border-radius: 5px;
					">
					<h5 class="mt-3" style="text-transform: uppercase;">Componentes Gerais</h5>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="loading-class" id="loading-class" type="text" class="form-control" value="loading" />
							<label class="form-label" for="loading-class">Classe do componente Loading</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="loading-modal-class" id="loading-modal-class" type="text" class="form-control" value="loading-modal" />
							<label class="form-label" for="loading-modal-class">Classe do componente Loading de Modal</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
						<div class="form-outline">
							<input name="loading-text" id="loading-text" type="text" class="form-control" value="Carregando..." />
							<label class="form-label" for="loading-text">Texto do componente Loading</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-3">
						<div class="form-outline">
							<input name="loading-text-class" id="loading-text-class" type="text" class="form-control" value="loading-text" />
							<label class="form-label" for="loading-text-class">Classe do componente de texto Loading</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-3">
						<div class="form-outline">
							<input name="content-class" id="content-class" type="text" class="form-control" value="content" />
							<label class="form-label" for="content-class">Classe do componente de Conteúdo</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-3">
						<div class="form-outline">
							<input name="content-modal-class" id="content-modal-class" type="text" class="form-control" value="content-modal" />
							<label class="form-label" for="content-modal-class">Classe do componente Conteúdo de Modal</label>
						</div>
					</div>
				</div>
				<div id="404-keywords-container" class="row mt-3 pb-3" style="
						border: 1px solid #cdccc9;
						border-radius: 5px;
					">
					<h5 class="mt-3" style="text-transform: uppercase;">404 - Página não encontrada</h5>
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<div class="form-outline">
							<textarea name="404-keywords" class="form-control" id="404-keywords" rows="2"></textarea>
							<label class="form-label" for="404-keywords">Palavras-chave da página não encontrada (Separado por vírgula)</label>
						</div>
					</div>
				</div>
			</form>
			<div class="row mt-3">				
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pb-3" style="
						border: 1px solid #cdccc9;
						border-radius: 5px;
					">
					<header>
						<ul class="nav nav-tabs" id="myTab" role="tablist" style="border-top-left-radius: .25rem; border-top-right-radius: .25rem;">
							<li class="nav-item">
								<a class="nav-link active" id="database-tab" data-mdb-toggle="tab" href="#database" role="tab" aria-controls="database" aria-selected="false">Banco de Dados</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="models-tab" data-mdb-toggle="tab" href="#models" role="tab" aria-controls="models" aria-selected="false">Classes (Models)</a>
							</li>
							<li id="nav-pages" class="nav-item">
								<a class="nav-link" id="pages-tab" data-mdb-toggle="tab" href="#pages" role="tab" aria-controls="pages" aria-selected="false">Páginas</a>
							</li>
							<li id="nav-frameworks" class="nav-item">
								<a class="nav-link" id="frameworks-tab" data-mdb-toggle="tab" href="#frameworks" role="tab" aria-controls="frameworks" aria-selected="false">Frameworks</a>
							</li>
							<li id="nav-libs" class="nav-item d-none">
								<a class="nav-link" id="libs-tab" data-mdb-toggle="tab" href="#libs" role="tab" aria-controls="libs" aria-selected="false">Bibliotecas</a>
							</li>
						</ul>
					</header>
					<div class="tab-content" id="myTabContent">
						<div class="tab-pane show active" id="database" role="tabpanel" aria-labelledby="database-tab">
							<%- include loading.ejs %>
							<%- include tabs/database.ejs %>
						</div>
						<div class="tab-pane fade" id="models" role="tabpanel" aria-labelledby="models-tab">
							<%- include loading.ejs %>
							<%- include tabs/models.ejs %>
						</div>
						<div class="tab-pane fade" id="pages" role="tabpanel" aria-labelledby="pages-tab">
							<%- include loading.ejs %>
							<%- include tabs/pages.ejs %>
						</div>
						<div class="tab-pane fade" id="frameworks" role="tabpanel" aria-labelledby="frameworks-tab">
							<%- include loading.ejs %>
							<%- include tabs/frameworks.ejs %>
						</div>
						<div class="tab-pane fade d-none" id="libs" role="tabpanel" aria-labelledby="libs-tab">
							<%- include loading.ejs %>
							<%- include tabs/libs.ejs %>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<!--<a id="back" class="btn peach-gradient btn-rounded waves-effect">Voltar</a>-->
					<button id="generate-files" type="button" class="btn btn-secondary btn-rounded waves-effect">Gerar arquivos</button>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<div class="form-outline">
						<textarea name="debug" class="form-control" id="debug" rows="15"></textarea>
						<label class="form-label" for="debug">Debug</label>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>