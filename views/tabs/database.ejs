<link rel="stylesheet" href="stylesheets/database.css">
<script type="module" src="javascripts/tabs/database.js"></script>
<div class="content">
    <div class="database-servers">
        <div id="mysql" class="database-server mdb-tooltip" value="1" data-mdb-toggle="tooltip" data-mdb-placement="top" title="MySQL" checked>
            <i class="fas fa-server"></i>
            <span>MySQL</span>
        </div>
        <div id="sql-server" class="database-server mdb-tooltip" value="2" data-mdb-toggle="tooltip" data-mdb-placement="top" title="SQL Server / MSSQL">
            <i class="fas fa-database"></i>
            <span>SQL Server / MSSQL</span>
        </div>
    </div>
    <form id="database-form">
        <div class="row mt-2">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="form-outline">
                    <input name="database-host" id="database-host" type="text" class="form-control" />
                    <label class="form-label" for="database-host">Host</label>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="form-outline">
                    <input name="database-user" id="database-user" type="text" class="form-control" />
                    <label class="form-label" for="database-user">Usu√°rio</label>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="form-outline input-group">
                    <input name="database-password" id="database-password" type="password" class="form-control" aria-label="Senha" aria-describedby="show-password" />
                    <button class="btn btn-outline-primary" type="button" id="show-password" data-mdb-ripple-color="dark" show="true">
                        <i class="fas fa-eye"></i>
                    </button>
                    <label class="form-label" for="database-password">Senha</label>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="form-outline">
                    <input name="database" id="database" type="text" class="form-control" />
                    <label class="form-label" for="database">Banco</label>
                </div>
            </div>
        </div>
    </form>
</div>